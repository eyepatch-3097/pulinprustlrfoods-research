<script>
    const tabs = document.querySelectorAll('.tab-btn');
    const contentSections = document.querySelectorAll('.content-section');
    const journeySteps = document.querySelectorAll('.journey-step');
    const detailsContainer = document.getElementById('journey-details-container');
    
    let salesChart = null;

    const journeyDetails = {
        awareness: {
            title: "üì¢ Awareness Strategy",
            points: [
                "<strong>Digital Advertising:</strong> Run targeted ads on Instagram, Facebook, and Google targeting interests like 'fitness', 'healthy eating', 'meal prep', and 'busy professionals'.",
                "<strong>Content Marketing:</strong> Create blog posts and short videos around topics like '5-minute healthy breakfasts' or 'desk-side nutrition hacks'.",
                "<strong>Influencer Seeding:</strong> Partner with micro-influencers in the health and wellness space for authentic product reviews and features."
            ]
        },
        consideration: {
            title: "ü§î Consideration & Education",
            points: [
                "<strong>Optimized Product Pages:</strong> Clear, benefit-driven copy, high-quality images, and transparent nutritional information.",
                "<strong>Customer Reviews & Testimonials:</strong> Integrate a reviews app to build social proof and trust.",
                "<strong>FAQ Section:</strong> Proactively answer potential customer questions about ingredients, preparation, and sourcing."
            ]
        },
        purchase: {
            title: "üõí Purchase Optimization",
            points: [
                "<strong>Streamlined Checkout:</strong> Utilize Shopify's one-page checkout to minimize friction.",
                "<strong>Partnership: Payment Gateways:</strong> Integrate multiple payment options (Credit/Debit Cards, UPI, Wallets) via a reliable payment aggregator.",
                "<strong>Cart Abandonment Flow:</strong> Set up automated email reminders for users who leave items in their cart."
            ]
        },
        'post-purchase': {
            title: "üì¶ Post-Purchase Experience",
            points: [
                "<strong>Partnership: Shipping Aggregators:</strong> Integrate with a shipping aggregator to provide reliable delivery and competitive rates across India.",
                "<strong>Order Tracking:</strong> Provide customers with clear, real-time order tracking notifications.",
                "<strong>Branded Unboxing:</strong> Design simple, eco-friendly packaging that enhances the customer experience."
            ]
        },
        loyalty: {
            title: "‚ù§Ô∏è Loyalty & Retention",
            points: [
                "<strong>Partnership: Loyalty Programs:</strong> Implement a points-based loyalty program to reward repeat purchases.",
                "<strong>Email Marketing:</strong> Nurture customer relationships with valuable content, special offers, and new product announcements.",
                "<strong>Subscription Model:</strong> Introduce a 'Subscribe & Save' option for convenience and to build recurring revenue."
            ]
        }
    };

    function switchTab(tabName) {
        tabs.forEach(tab => {
            if (tab.dataset.tab === tabName) {
                tab.classList.remove('tab-inactive');
                tab.classList.add('tab-active');
            } else {
                tab.classList.remove('tab-active');
                tab.classList.add('tab-inactive');
            }
        });

        contentSections.forEach(section => {
            if (section.id === tabName) {
                section.classList.add('active');
            } else {
                section.classList.remove('active');
            }
        });
        
        if (tabName === 'sales' && !salesChart) {
             renderSalesChart();
        }
    }

    tabs.forEach(tab => {
        tab.addEventListener('click', () => {
            switchTab(tab.dataset.tab);
        });
    });

    journeySteps.forEach(step => {
        step.addEventListener('click', () => {
            const detailsKey = step.dataset.details;
            const details = journeyDetails[detailsKey];

            detailsContainer.innerHTML = `
                <h3 class="text-2xl font-bold mb-4 text-[#264653]">${details.title}</h3>
                <ul class="list-disc list-inside space-y-2 text-gray-700">
                    ${details.points.map(point => `<li>${point}</li>`).join('')}
                </ul>
            `;
            
            journeySteps.forEach(s => s.classList.remove('ring-2', 'ring-[#E76F51]'));
            step.classList.add('ring-2', 'ring-[#E76F51]');
        });
    });

    function renderSalesChart() {
        const ctx = document.getElementById('salesChannelChart').getContext('2d');
        salesChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['D2C (Shopify)', 'Amazon', 'Strategic Partnerships'],
                datasets: [{
                    label: 'Channel Contribution',
                    data: [65, 25, 10],
                    backgroundColor: [
                        '#E76F51',
                        '#F4A261',
                        '#E9C46A'
                    ],
                    borderColor: '#FDFBF8',
                    borderWidth: 4,
                    hoverOffset: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            font: {
                                size: 14,
                                family: 'Poppins'
                            },
                             color: '#4A5759'
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed !== null) {
                                    label += context.parsed + '%';
                                }
                                return label;
                            }
                        }
                    }
                },
                cutout: '60%'
            }
        });
    }

</script>

</body>
</html>
